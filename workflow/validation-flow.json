{
  "checks": [
    {"id": "lint", "required": true},
    {"id": "unit-tests", "required": true},
    {"id": "integration-tests", "required": true},
    {"id": "security-scan", "required": true},
    {"id": "performance-test", "required": true},
    {"id": "acceptance-score", "required": true},
    {"id": "screenshot-validation", "required": true}
  ],
  "acceptance_policy": {
    "experience_score": {"min": 9.5, "consecutive": 3},
    "coverage": {"min": 0.8},
    "p95_latency_ms": {"max": 200},
    "screenshot_review": {
      "required": true,
      "dimensions": {
        "ui_integrity": {"min": 9.5},
        "ui_aesthetics": {"min": 9.3},
        "ux_rationality": {"min": 9.3}
      },
      "evidence": {
        "desktop_required": true,
        "mobile_required": true,
        "min_screenshots": 10,
        "required_scenes": [
          "lobby-home",
          "room-list",
          "table-in-game",
          "hand-or-board-status",
          "settlement-result",
          "reconnect-state",
          "insufficient-balance",
          "network-latency-warning",
          "new-user-onboarding",
          "accessibility-high-contrast"
        ]
      },
      "rubric": {
        "total_score": 10,
        "weights": {
          "ui_integrity": 40,
          "ui_aesthetics": 30,
          "ux_rationality": 30
        },
        "ui_integrity_checkpoints": [
          "核心页面元素无缺失",
          "棋盘/牌桌比例正确且无遮挡",
          "玩家位、计时器、分数、操作区完整",
          "空状态/加载态/错误态可见且可用"
        ],
        "ui_aesthetics_checkpoints": [
          "视觉层级清晰，主次分明",
          "棋牌元素风格统一，质感稳定",
          "字体、间距、色彩在多页面一致",
          "复杂背景下文字和按钮对比度充足"
        ],
        "ux_rationality_checkpoints": [
          "核心路径步数最短且无歧义",
          "关键操作有即时反馈与可撤销策略",
          "断线重连、托管、超时等异常流程可闭环",
          "移动端触控热区和手势冲突可控"
        ]
      }
    }
  }
}
